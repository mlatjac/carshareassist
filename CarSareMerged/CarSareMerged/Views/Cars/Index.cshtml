@model IEnumerable<CarSareMerged.Models.Car>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarType.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.currentPositionLat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.currentPositionLon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.currentOdometerReading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.currentFuelStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CarType.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currentPositionLat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currentPositionLon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currentOdometerReading)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currentFuelStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
